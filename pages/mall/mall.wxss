/* pages/mall/mall.wxss */
view{
  box-sizing: border-box;
}
.mall{
  width: 750rpx;
  display: flex;
}
.position-left{
  padding-left: 160rpx;
  position: relative;
  background-color: #f2f2f2;
}
.mall-left{
  width: 160rpx;
  background-color: #f8f8f8;
  position: fixed;
  top: 0;
  left: 0;
}
.mall-left-list{
  width: 160rpx;
  height: 100rpx;
  padding: 34rpx 30rpx 34rpx 26rpx;
  font-size: 24rpx;
  color: #666;
}
.mall-right{
  flex: 1;
  overflow-y: auto;
}
.mall-right-top{
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  margin-left: 0;
  padding-right: 20rpx;
  background-color: #f8f8f8;
}
.mall-right-bot{
  padding-left: 20rpx;
}
.mall-right-bot-box{
  height: 160rpx;
  padding: 20rpx 30rpx 20rpx 140rpx;
  border-bottom: 2rpx solid #eee;
  position: relative;
  font-size: 28rpx;
}
.mall-right-image{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
}
.mall-right-image image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.mall-right-bot-box text:nth-child(2){
  width: 398rpx;
  height: 32rpx;
  line-height: 32rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #333;
  font-weight: 700;
}
.mall-right-bot-box text:nth-child(3){
  width: 220rpx;
  margin-top: 16rpx;
  display: block;
  font-size: 32rpx;
  line-height: 36rpx;
  color: #f44;
}
.ht-list-x-box-text-icon{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  float: right;
}
.ht-list-x-box-text-icon image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: -2rpx;
  right: 0;
  overflow: hidden;
}
.is_checked{
  width: 160rpx;
  height: 100rpx;
  padding: 34rpx 30rpx 34rpx 26rpx;
  font-size: 24rpx;
  color: #666;
  border-left: 4rpx solid #f44;
  background-color: #fff;
  font-weight: 500;
}