<scroll-view
  scroll-y
  bindscrolltolower="loadMore"
  class='film-list'
>
  <view class='ht-swiper'>
    <swiper 
      indicator-dots="{{indicatorDots}}"
      interval="{{interval}}" 
      autoplay="{{autoplay}}" 
      duration="{{duration}}"
      circular="true"
    >
      <block wx:for="{{imgUrls}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='ht-nav'>
