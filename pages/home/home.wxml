    <view>
      <image src='https://img.yzcdn.cn/upload_files/2018/09/29/Fu__5cVB6RJR-i-puX3KJEP-y2hI.jpg?imageView2/2/w/730/h/0/q/75/format/webp'/>
    </view>
    <view>
      <image src='https://img.yzcdn.cn/upload_files/2018/09/29/FruemwjW6OnkWukphsrNz2qTM2cq.jpg?imageView2/2/w/730/h/0/q/75/format/webp'/>
